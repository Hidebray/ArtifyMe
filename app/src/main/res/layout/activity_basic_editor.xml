<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".activities.BasicEditorActivity">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/layout_header" />

    <FrameLayout
        android:id="@+id/fl_editor_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/rcvMainTools"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader">

        <jp.co.cyberagent.android.gpuimage.GPUImageView
            android:id="@+id/gpuImgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:visibility="visible" />

        <ja.burhanrashid52.photoeditor.PhotoEditorView
            android:id="@+id/photoEdtView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:visibility="invisible" />
    </FrameLayout>

    <ProgressBar
        android:id="@+id/prbEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/fl_editor_container"
        app:layout_constraintEnd_toEndOf="@id/fl_editor_container"
        app:layout_constraintStart_toStartOf="@id/fl_editor_container"
        app:layout_constraintTop_toTopOf="@id/fl_editor_container" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvMainTools"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#222222"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent" />

    <FrameLayout
        android:id="@+id/frlPanelContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/rcvMainTools" />

</androidx.constraintlayout.widget.ConstraintLayout>